<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange1</item>
        <item name="colorPrimaryDark">@color/orange1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="key_btn">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/txt_dark</item>
        <item name="android:textSize">@dimen/font_Headline</item>
        <item name="android:background">@drawable/selector_rec_trans2gray</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="txt_country">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/selector_black2orange</item>
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="edt_rate_num">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">12</item>
        <item name="android:textColor">@color/txt_dark</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

</resources>
