<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_rate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray1"
        android:padding="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_vertical_72"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="CNY"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/font_Subhead_device"/>

            <com.pyn.rtexchagerate.view.ClearEditText
                android:id="@+id/cedt_one_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:inputType="number"
                android:maxLength="12"
                android:textColor="@color/txt_dark"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_Subhead_device"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_vertical_72"
            android:layout_marginTop="@dimen/margin_vertical_72"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_two_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="EUR"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/font_Subhead_device"/>

            <TextView
                android:id="@+id/tv_two_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/font_Subhead_device"/>

        </LinearLayout>

        <com.pyn.rtexchagerate.view.MyKeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyTextColor="@color/white"
            android:visibility="visible" />
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>

